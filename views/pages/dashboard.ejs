<%- include('../partials/header') %>

    <div class="page-container">
        <div class="content-wrapper">
            <h2 class="section-title">Yönetim Paneli</h2>
            <div class="dashboard-header">
                <h2>Toplam Yazı: <span id="postCount">
                        <%= posts.length %>
                    </span></h2>
                <a href="/dashboard/create" class="action-button">Yeni Yazı</a>
            </div>
            <div class="search-bar">
                <input type="text" id="searchInput" placeholder="Başlık arayın..." class="search-input">
            </div>
            <% if (!posts || posts.length===0) { %>
                <p class="no-posts">Henüz yazınız yok.</p>
                <% } else { %>
                    <div class="posts-grid" id="postsGrid">
                        <% posts.forEach(post=> { %>
                            <div class="post-card animate-card" data-title="<%= post.title.toLowerCase() %>">
                                <h3 class="post-title">
                                    <%= post.title %>
                                </h3>
                                <p class="post-content">
                                    <%= post.content.substring(0, 100) %>...
                                </p>
                                <p class="post-meta">
                                    <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z">
                                        </path>
                                    </svg>
                                    <span style="width: 100%; display: flex; justify-content: space-between;">
                                        <span>
                                            Created at:
                                            <%= post.createdAt ? `${new Date(post.createdAt).toLocaleDateString('tr-TR',
                                                { day: '2-digit' , month: 'long' , year: 'numeric' })} - ${new
                                                Date(post.createdAt).toLocaleTimeString('tr-TR', { hour: '2-digit' ,
                                                minute: '2-digit' })}` : 'Bilinmiyor' %>
                                        </span>
                                        <% if (post.createdAt !==post.lastUpdateDate) { %>
                                            <span>
                                                Last Updated:
                                                <%= post.lastUpdateDate ? `${new
                                                    Date(post.lastUpdateDate).toLocaleDateString('tr-TR', {
                                                    day: '2-digit' , month: 'long' , year: 'numeric' })} - ${new
                                                    Date(post.lastUpdateDate).toLocaleTimeString('tr-TR', {
                                                    hour: '2-digit' , minute: '2-digit' })}` : 'Bilinmiyor' %>
                                            </span>
                                            <% } %>
                                    </span>
                                </p>
                                <div class="post-actions">
                                    <a href="/dashboard/edit/post/<%= post._id %>" class="action-button">Düzenle</a>
                                    <button class="delete-button" data-post-id="<%= post._id %>">Sil</button>
                                </div>
                            </div>
                            <% }) %>
                    </div>
                    <% } %>
        </div>
    </div>

    <style>
        .page-container {
            min-height: 100vh;
            padding: flex;
        }

        .content-wrapper {
            max-width: 900px;
            margin: 0 auto;
        }

        .section-title {
            font-size: 1.75rem;
            font-weight: 600;
            color: #1a202c;
            margin-bottom: 1.5rem;
        }

        .dashboard-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 1.5rem;
        }

        .post-count {
            font-size: 1rem;
            color: #4b5563;
        }

        .post-count span {
            font-weight: 600;
        }

        .search-bar {
            margin-bottom: 1.5rem;
        }

        .search-input {
            width: 100%;
            padding: 0.75rem;
            border: 1px solid #d1d5db;
            border-radius: 6px;
            font-size: 1rem;
            color: #1a202c;
            transition: border-color 0.3s;
        }

        .search-input:focus {
            outline: none;
            border-color: #4f46e5;
            box-shadow: 0 0 0 3px rgba(79, 70, 229, 0.1);
        }

        .no-posts {
            font-size: 1.125rem;
            color: #6b7280;
            text-align: center;
            padding: 2rem;
        }

        .posts-grid {
            display: grid;
            gap: 1.5rem;
        }

        .post-card {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            padding: 1.5rem;
            transition: transform 0.3s ease;
        }

        .post-title {
            font-size: 1.25rem;
            font-weight: 600;
            color: #1a202c;
            margin-bottom: 0.5rem;
        }

        .post-content {
            font-size: 0.95rem;
            color: #4b5563;
            margin-bottom: 1rem;
        }

        .post-meta {
            display: flex;
            align-items: center;
            font-size: 0.875rem;
            color: #6b7280;
            margin-bottom: 1rem;
        }

        .icon {
            width: 1rem;
            height: 1rem;
            margin-right: 0.5rem;
        }

        .post-actions {
            display: flex;
            gap: 0.5rem;
        }

        .action-button,
        .delete-button {
            padding: 0.5rem 1rem;
            border: none;
            border-radius: 6px;
            font-size: 0.875rem;
            cursor: pointer;
            transition: background 0.3s;
        }

        .action-button {
            background: #4f46e5;
            color: #fff;
            text-decoration: none;
        }

        .action-button:hover {
            background: #4338ca;
        }

        .delete-button {
            background: #ef4444;
            color: #fff;
        }

        .delete-button:hover {
            background: #dc2626;
        }

        @keyframes fade-in {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-in {
            animation: fade-in 0.5s ease-out;
        }

        @media (max-width: 768px) {
            .page-container {
                padding: 1.5rem 1rem;
            }

            .section-title {
                text-align: center;
                font-size: 1.5rem;
            }

            .dashboard-header {
                flex-direction: column;
                gap: 1rem;
            }

            .post-title {
                font-size: 1.125rem;
            }
        }
    </style>

    <script>
        const searchInput = document.getElementById('searchInput');
        const postsGrid = document.getElementById('postsGrid');
        const postCards = postsGrid ? postsGrid.querySelectorAll('.post-card') : [];
        const postCount = document.getElementById('postCount');

        if (searchInput) {
            searchInput.addEventListener('input', () => {
                const query = searchInput.value.toLowerCase();
                let visibleCount = 0;
                postCards.forEach(card => {
                    const title = card.dataset.title;
                    if (title.includes(query)) {
                        card.style.display = '';
                        visibleCount++;
                    } else {
                        card.style.display = 'none';
                    }
                });
                if (postCount) postCount.textContent = visibleCount;
            });
        }

        document.querySelectorAll('.delete-button').forEach(button => {
            button.addEventListener('click', async () => {
                const postId = button.dataset.postId;
                if (confirm('Bu yazıyı silmek istediğinizden emin misiniz?')) {
                    try {
                        const response = await fetch(`/dashboard/delete/post/${postId}`, {
                            method: 'DELETE'
                        });
                        if (response.ok) {
                            button.closest('.post-card').remove();
                            if (postCount) postCount.textContent = document.querySelectorAll('.post-card').length;
                        } else {
                            alert('Silme işlemi başarısız.');
                        }
                    } catch (error) {
                        alert('Hata: ' + error.message);
                    }
                }
            });
        });
    </script>

    <%- include('../partials/footer') %>