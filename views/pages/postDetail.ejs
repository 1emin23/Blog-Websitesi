<%- include('../partials/header') %>

    <div class="page-container">
        <div class="content-wrapper">
            <% if (!post) { %>
                <p class="no-posts">Yazı bulunamadı.</p>
                <% } else { %>
                    <div class="post-detail animate-fade-in">
                        <h2 class="post-title">
                            <%= post.title %>
                        </h2>
                        <p class="post-meta">
                            <span class="date-info">
                                <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                        d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z">
                                    </path>
                                </svg>
                                <span>
                                    Created at:
                                    <%= post.createdAt ? `${new Date(post.createdAt).toLocaleDateString('tr-TR', {
                                        day: '2-digit' , month: 'long' , year: 'numeric' })} - ${new
                                        Date(post.createdAt).toLocaleTimeString('tr-TR', { hour: '2-digit' ,
                                        minute: '2-digit' })}` : 'Bilinmiyor' %>
                                </span>
                            </span>
                            <% if (post.createdAt !==post.lastUpdateDate) { %>
                                <span class="date-info">
                                    <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z">
                                        </path>
                                    </svg>
                                    <span>
                                        Last Updated:
                                        <%= post.lastUpdateDate ? `${new
                                            Date(post.lastUpdateDate).toLocaleDateString('tr-TR', { day: '2-digit' ,
                                            month: 'long' , year: 'numeric' })} - ${new
                                            Date(post.lastUpdateDate).toLocaleTimeString('tr-TR', { hour: '2-digit' ,
                                            minute: '2-digit' })}` : 'Bilinmiyor' %>
                                    </span>
                                </span>
                                <% } %>
                        </p>
                        <p class="post-content">
                            <%= post.content %>
                        </p>
                        <a href="/" class="action-button">Geri Dön</a>
                    </div>
                    <% } %>
        </div>
    </div>

    <style>
        .page-container {
            min-height: 100vh;
            padding: 2rem 1rem;
        }

        .content-wrapper {
            max-width: 800px;
            margin: 0 auto;
        }

        .no-posts {
            font-size: 1.125rem;
            color: #6b7280;
            text-align: center;
            padding: 2rem;
        }

        .post-detail {
            background: #fff;
            border-radius: 8px;
            box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
            padding: 2rem;
        }

        .post-title {
            font-size: 1.75rem;
            font-weight: 600;
            color: #1a202c;
            margin-bottom: 1rem;
        }

        .post-meta {
            display: flex;
            align-items: center;
            justify-content: space-between;
            font-size: 0.875rem;
            color: #6b7280;
            margin-bottom: 1rem;
        }

        .icon {
            width: 1rem;
            height: 1rem;
            margin-right: 0.5rem;
        }

        .post-content {
            font-size: 1rem;
            color: #4b5563;
            margin-bottom: 1.5rem;
        }

        .action-button {
            display: inline-block;
            padding: 0.5rem 1rem;
            background: #4f46e5;
            color: #fff;
            text-decoration: none;
            border-radius: 6px;
            font-size: 0.875rem;
            transition: background 0.3s;
        }

        .action-button:hover {
            background: #4338ca;
        }

        @keyframes fade-in {
            from {
                opacity: 0;
                transform: translateY(10px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .animate-fade-in {
            animation: fade-in 0.5s ease-out;
        }

        @media (max-width: 768px) {
            .page-container {
                padding: 1.5rem 1rem;
            }

            .post-title {
                font-size: 1.5rem;
            }

            .post-content {
                font-size: 0.95rem;
            }

            .post-meta {
                align-items: flex-start;
                justify-content: center;
                flex-direction: column;
            }

            .date-info {
                display: flex;
                align-items: center;
            }
        }
    </style>

    <%- include('../partials/footer') %>