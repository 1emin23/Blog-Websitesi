<%- include('../partials/header') %>

    <div class="page-container">
        <div class="content-wrapper">
            <h2 class="section-title">Son Yazılar</h2>
            <% if (!posts || posts.length===0) { %>
                <p class="no-posts">Yazı bulunmuyor.</p>
                <% } else { %>
                    <div class="posts-grid">
                        <% posts.forEach(post=> { %>
                            <%- include('./post.ejs', {post}) %>
                                <% }) %>
                    </div>
                    <% } %>
        </div>
    </div>

    <style>
        .page-container {
            min-height: 100vh;
            padding: 2rem 1rem;
        }

        .content-wrapper {
            max-width: 900px;
            margin: 0 auto;
        }


        .section-title {
            font-size: 1.75rem;
            font-weight: 600;
            color: #1a202c;
            margin-bottom: 1.5rem;
        }

        .no-posts {
            font-size: 1.125rem;
            color: #6b7280;
            text-align: center;
            padding: 2rem;
        }

        .posts-grid {
            display: grid;
            gap: 1.5rem;
        }

        @media (max-width: 768px) {
            .page-container {
                padding: 1.5rem 1rem;
            }

            .section-title {
                font-size: 1.5rem;
            }
        }
    </style>

    <%- include('../partials/footer') %>